/ p= form.text_field :lab_name

p= form.text_field :accronym, required: true
p= form.text_area :resume,required: true, class: 'wiki-edit', rows: '10'
= wikitoolbar_for 'project_resume'
p= form.text_area :objectifs, class: 'wiki-edit', rows: '10'
= wikitoolbar_for 'project_objectifs'
p= form.text_area :methodologies, class: 'wiki-edit', rows: '10'
= wikitoolbar_for 'project_methodologies'
p= form.text_area :results, class: 'wiki-edit', rows: '10'
= wikitoolbar_for 'project_results'
p= form.text_area :perspectives, class: 'wiki-edit', rows: '10'
= wikitoolbar_for 'project_perspectives'
p= form.text_area :comments, class: 'wiki-edit', rows: '10'
