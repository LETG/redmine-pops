p= form.select :support_id, Support.all.collect{|s| [s.name, s.id]}, {}, {class: 'Select2', style: 'width: 300px; margin-bottom: 15px;'}
p= form.text_field :sponsor

p= form.text_field :url_public
p= form.text_field :starts_date, required: true, class: "datepicker", value: project.starts_date ? project.starts_date.strftime("%d/%m/%Y") : Date.today.strftime("%d/%m/%Y")
p= form.text_field :ends_date, required: true, class: "datepicker", value: project.ends_date ? project.ends_date.strftime("%d/%m/%Y") : Date.today.strftime("%d/%m/%Y")

